@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model IEnumerable<crm_ps.Models.Course>;


@{
    ViewData["Title"] = "Listagem de cursos";
}

<h2>Cursos</h2>

<p>
    <a asp-action="Create">Cadastrar novo curso</a>
</p>

<div>
    @foreach (var item in Model)
    {
        var idData = $"{HttpContextAccessor.HttpContext.Session.GetString("CandidateId")}s{item.Id}";
        <div class="bg-warning">
            <h2>
                @Html.DisplayFor(model => item.Name)
            </h2>
            <p>
                @Html.DisplayFor(model => item.Level)
            </p>
            <form asp-action="Insc">

                <input type="text" value="@idData" class="btn btn-primary" style="display: none">
                <input type="submit" value="Inscrever-se" class="btn btn-primary">
                @* <a asp-action="Insc" asp-controller="Course" asp-route-id="@idData">Inscrever-se</a> *@
            </form>
        </div>
    }
</div>